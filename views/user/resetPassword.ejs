<form action="/session/resetPassword/<%= email%>" method="POST" class="form-signin">
	<h2 class="form-signin-heading">Update your new password</h2>

	<% if(flash && flash.err) { %>
		<ul class="alert alert-success">
		<% Object.keys(flash.err).forEach(function(error) { %>
			<li> <%= JSON.stringify(flash.err[error]) %> </li>
		<% }) %>
		</ul>
	<% } %>
    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" placeholder="Password" name="password" >
   	</div>
    <div class="form-group">
        <label for="password">Confirm Password</label>
        <input type="password" class="form-control" placeholder="password again" name="confirmation">
    </div>
    <input type="submit" class="btn btn-lg btn-primary btn-block" value="Update password" />
     <input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>
           